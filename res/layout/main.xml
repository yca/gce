<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/settingsView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >
                <CheckBox
                    android:id="@+id/checkFilter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Taban hattı kaymasını engelle" />
                <CheckBox
                    android:id="@+id/checkFilter2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alçak geçiren filtre kullan" />
                <CheckBox
                    android:id="@+id/checkFilter3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50 HZ bastır" />
                <CheckBox
                    android:id="@+id/checkFilter4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adaptif gürültü temizleme" />
                <CheckBox
                    android:id="@+id/checkAutoScale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Otomatik ölçeklendir" />
            </LinearLayout>

            <TextView
                android:id="@+id/textview2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="this is another tab" />

            <ListView
                android:id="@+id/ListView1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >
            </ListView>

            <LinearLayout
                android:id="@+id/GraphLayout1"
                android:layout_width="fill_parent"
        		android:layout_height="fill_parent"
        		android:orientation="vertical">
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</TabHost>